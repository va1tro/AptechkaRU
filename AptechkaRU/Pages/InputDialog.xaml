<Window x:Class="AptechkaRU.Pages.InputDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:AptechkaRU.Pages"
        mc:Ignorable="d"
        Title="Новая аптечка" Height="180" Width="350"
        WindowStartupLocation="CenterScreen"
        Background="#E0F7FA" ResizeMode="NoResize">

    <Border Background="White" CornerRadius="15" Padding="20" BorderBrush="#4DB6AC" BorderThickness="2">
        <StackPanel>
            <TextBlock Text="Введите название аптечки:" FontSize="14" Foreground="#008080" Margin="0 0 0 10"/>
            <TextBox x:Name="InputTextBox" Height="30" Margin="0 0 0 10" Background="#F0FFFF"/>
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                <Button Content="OK" Width="60" Margin="0 0 10 0" Background="#4DB6AC" Foreground="White" Click="OkButton_Click"/>
                <Button Content="Отмена" Width="80" Background="Gray" Foreground="White" Click="CancelButton_Click"/>
            </StackPanel>
        </StackPanel>
    </Border>
</Window>
