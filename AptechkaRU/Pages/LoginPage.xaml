<Page x:Class="AptechkaRU.Pages.LoginPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:AptechkaRU.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="LoginPage" 
      Background="#E0F7F4"
      KeyDown="Page_KeyDown"
      Focusable="True"
      Loaded="Page_Loaded">

    <Page.Resources>

        <!-- Общий стиль для TextBox с placeholder и скруглениями -->
        <Style TargetType="TextBox" x:Key="RoundedTextBox">
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="TextBox">
                        <Grid>
                            <Border Background="White"
                            BorderBrush="#4DB6AC"
                            BorderThickness="1.5"
                            CornerRadius="10"
                            SnapsToDevicePixels="True"/>
                            <ScrollViewer x:Name="PART_ContentHost" 
                                  VerticalAlignment="Center" />
                        </Grid>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Setter Property="Height" Value="35"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Padding" Value="10,0"/>
            <!-- Добавим чуть-чуть отступа -->
        </Style>

        <!-- Стиль для PasswordBox со скруглениями -->
        <Style TargetType="PasswordBox" x:Key="RoundedPasswordBox">
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="PasswordBox">
                        <Grid>
                            <Border Background="White"
                            BorderBrush="#4DB6AC"
                            BorderThickness="1.5"
                            CornerRadius="10"/>
                            <ScrollViewer x:Name="PART_ContentHost" 
                                  VerticalAlignment="Center" />
                        </Grid>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Setter Property="Height" Value="35"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Padding" Value="10,0"/>
            <!-- Для симметрии -->
        </Style>


    </Page.Resources>

    <Grid>
        <Border Width="360"
                Height="420"
                Background="White"
                CornerRadius="20"
                HorizontalAlignment="Center"
                VerticalAlignment="Center"
                Padding="30"
                BorderBrush="#26A69A"
                BorderThickness="2">
            <StackPanel VerticalAlignment="Center" >

                <TextBlock Text="Аптечка.ру"
                           FontSize="28"
                           FontWeight="Bold"
                           Foreground="#00796B"
                           HorizontalAlignment="Center"
                           Margin="0,0,0,20"/>

                <!-- Login -->
                <Grid Margin="0,0,0,15">
                    <TextBox Name="LoginTextBox"
                             Style="{StaticResource RoundedTextBox}"
                             TextChanged="LoginTextBox_TextChanged"/>
                    <TextBlock Text="Введите логин"
                               Margin="12,0,0,0"
                               VerticalAlignment="Center"
                               Foreground="Gray"
                               IsHitTestVisible="False"
                               x:Name="LoginPlaceholder"/>
                </Grid>

                <!-- Password -->
                <Grid Margin="0,0,0,25">
                    <PasswordBox Name="PasswordBox"
                                 Style="{StaticResource RoundedPasswordBox}"
                                 PasswordChanged="PasswordBox_PasswordChanged"/>
                    <TextBlock Text="Введите пароль"
                               Margin="12,0,0,0"
                               VerticalAlignment="Center"
                               Foreground="Gray"
                               IsHitTestVisible="False"
                               x:Name="PasswordPlaceholder"/>
                </Grid>

                <Button Content="Войти"
                        Background="#26A69A"
                        Foreground="White"
                        FontWeight="Bold"
                        Height="40"
                        Margin="0,0,0,10"
                        Click="LoginButton_Click"
                        BorderThickness="0"
                        Cursor="Hand"/>

                <Button Content="Зарегистрироваться"
                        Background="Transparent"
                        BorderBrush="#26A69A"
                        BorderThickness="1.5"
                        Foreground="#00796B"
                        FontWeight="Bold"
                        Height="40"
                        Click="RegisterButton_Click"
                        Cursor="Hand"/>
            </StackPanel>
        </Border>
    </Grid>
</Page>